<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.pc.test2.MainActivity"
        android:nestedScrollingEnabled="true"
        android:contextClickable="false"
        android:clickable="true"
        android:background="#ffffff"
        android:foreground="#737272">

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="pH"
            android:id="@+id/button"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:enabled="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#f3e22a" />




        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="EC"
            android:id="@+id/button2"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:clickable="true"
            android:contextClickable="false"
            android:enabled="true"
            android:focusableInTouchMode="false"
            android:textSize="14dp"
            android:layout_below="@+id/button"
            android:layout_marginTop="30dp"
            android:background="#000000" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OM"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:foreground="#2de02d"
            android:enabled="true"
            android:clickable="true"
            android:textSize="14dp"
            android:background="#5e2626" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="N total"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="14dp"
            android:clickable="true"
            android:background="#21551d" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="N"
            android:id="@+id/button5"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="14dp"
            android:clickable="true"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#3cd334" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="P"
            android:id="@+id/button6"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:textSize="14dp"
            android:clickable="true"
            android:layout_below="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ca3aca" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="K"
            android:id="@+id/button7"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14dp"
            android:clickable="true"
            android:layout_below="@+id/button6"
            android:layout_marginTop="35dp"
            android:background="#0decf8" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medium Text"
            android:id="@+id/VOM"
            android:layout_alignTop="@+id/button3"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="7.5"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/button"
            android:layout_alignRight="@+id/VOM"
            android:layout_alignEnd="@+id/VOM"
            android:textColor="#afaeae"
            android:gravity="center" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="391"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/button2"
            android:layout_alignLeft="@+id/VOM"
            android:layout_alignStart="@+id/VOM"
            android:layout_alignRight="@+id/VOM"
            android:layout_alignEnd="@+id/VOM"
            android:textColor="#FFAFAEAE"
            android:gravity="center" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1424"
            android:id="@+id/textView4"
            android:layout_above="@+id/button5"
            android:layout_alignLeft="@+id/VOM"
            android:layout_alignStart="@+id/VOM"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFAFAEAE"
            android:gravity="center" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="---"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/button5"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:textColor="#FFAFAEAE"
            android:gravity="center" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="---"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/button6"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:textColor="#FFAFAEAE"
            android:gravity="center" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="---"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/button7"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:textColor="#FFAFAEAE"
            android:gravity="center" />

</RelativeLayout>

