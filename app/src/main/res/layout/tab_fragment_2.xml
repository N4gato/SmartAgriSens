<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.test2.MainActivity"
    android:nestedScrollingEnabled="true"
    android:contextClickable="false"
    android:clickable="true"
    android:background="#ffffff"
    android:foreground="#737272">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true">


        <Button
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="center_vertical"
            android:background="#ff0000"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Faible"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />
        <Button
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="#7ef932"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Normal"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />
        <Button
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="#b10707"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Elevé"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />


    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_alignParentRight="true"
    android:id="@+id/linearLayout2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Référence"
        android:layout_gravity="center_vertical|left"
        android:textColor="#000000"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp" />

    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="7dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_horizontal"
        android:progress="6"
        android:max="14"
        android:secondaryProgress="8"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="20dp" />
</LinearLayout>

    <LinearLayout
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="false"
    android:layout_marginTop="26dp"
    android:layout_alignParentLeft="false"
    android:layout_alignParentRight="true"
    android:id="@+id/linearLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_toLeftOf="@+id/progressBar"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar"
        android:layout_gravity="left"
        android:textColor="#000000"
        android:textSize="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="6"
        android:id="@+id/textView3"
        android:layout_toLeftOf="@+id/progressBar"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar"
        android:textColor="#000000"
        android:layout_marginLeft="73dp"
        android:textSize="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="8"
        android:id="@+id/textView4"
        android:layout_toLeftOf="@+id/progressBar"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar"
        android:textColor="#000000"
        android:layout_marginLeft="24dp"
        android:textSize="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="14"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar"
        android:textColor="#000000"
        android:layout_marginLeft="66dp"
        android:textSize="12dp" />

</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Valeur"
        android:layout_gravity="center_vertical|left"
        android:textColor="#000000"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp" />

    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="5dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_horizontal2"
        android:progress="7"
        android:max="14"
        android:layout_alignParentRight="true"
        android:id="@+id/progressBar"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="46dp" />

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="pH"
        android:id="@+id/textView11"
        android:layout_marginTop="22dp"
        android:textColor="#f3e22a"
        android:textStyle="bold" />

</RelativeLayout>